# Screen brightness controls
# bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
# bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +20% # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 20%- # decrease screen brightness


# exec xautolock -time 10 -locker 'loginctl lock-session $XDG_SESSION_ID'
exec xss-lock -- i3lock -n -c 000000
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id "i3lock -c 000000 -t -i /home/dominik/Pictures/Plasmas/MAST_Tokamak.png", mode "default"
    # bindsym l exec "loginctl lock-session $XDG_SESSION_ID", mode "default"
    # broken because neither tmux nor i3 get the env var!
    bindsym e exec --no-startup-id "i3-msg exit", mode "default"
    bindsym s exec --no-startup-id "systemctl suspend", mode "default"
    bindsym h exec --no-startup-id "systemctl hibernate", mode "default"
    bindsym r exec --no-startup-id "systemctl reboot", mode "default"
    bindsym Shift+s exec --no-startup-id "systemctl poweroff", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"
bindsym $mod+grave exec --no-startup-id "i3lock -c 000000 -t -i /home/dominik/Pictures/Plasmas/MAST_Tokamak.png"
