# i3-resurrect
set $i3_resurrect i3-resurrect

set $mode_resurrect_save (1-0) save numbered workspace, (v) save current workspace, (Enter/Escape) disable
# Save workspace mode.
mode "$mode_resurrect_save" {
  bindsym 1 exec "$i3_resurrect save -n 1 --swallow=class,instance,title"
  bindsym 2 exec "$i3_resurrect save -n 2 --swallow=class,instance,title"
  bindsym 3 exec "$i3_resurrect save -n 3 --swallow=class,instance,title"
  bindsym 4 exec "$i3_resurrect save -n 4 --swallow=class,instance,title"
  bindsym 5 exec "$i3_resurrect save -n 5 --swallow=class,instance,title"
  bindsym 6 exec "$i3_resurrect save -n 6 --swallow=class,instance,title"
  bindsym 7 exec "$i3_resurrect save -n 7 --swallow=class,instance,title"
  bindsym 8 exec "$i3_resurrect save -n 8 --swallow=class,instance,title"
  bindsym 9 exec "$i3_resurrect save -n 9 --swallow=class,instance,title"
  bindsym 0 exec "$i3_resurrect save -n 10 --swallow=class,instance,title"
  bindsym v exec "$i3_resurrect save --swallow=class,instance,title"
  bindsym $mod+v exec "$i3-resurrect save --swallow=class,instance,title"

  # Back to normal: Enter, Escape, or v
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+v mode "$mode_resurrect_save"

set $mode_resurrect_restore (1-0) restore workspace programs, ($mod+1-0) restore workspace layout, b - current workspace, (Enter/Escape) disable
# Restore workspace mode.
mode "$mode_resurrect_restore" {
  bindsym 1 exec "$i3_resurrect restore -n 1 --programs-only"
  bindsym 2 exec "$i3_resurrect restore -n 2 --programs-only"
  bindsym 3 exec "$i3_resurrect restore -n 3 --programs-only"
  bindsym 2 exec "$i3_resurrect restore -n 4 --programs-only"
  bindsym 5 exec "$i3_resurrect restore -n 5 --programs-only"
  bindsym 6 exec "$i3_resurrect restore -n 6 --programs-only"
  bindsym 7 exec "$i3_resurrect restore -n 7 --programs-only"
  bindsym 8 exec "$i3_resurrect restore -n 8 --programs-only"
  bindsym 9 exec "$i3_resurrect restore -n 9 --programs-only"
  bindsym 0 exec "$i3_resurrect restore -n 10 --programs-only"

  bindsym $mod+1 exec "$i3_resurrect restore -n 1 --layout-only"
  bindsym $mod+2 exec "$i3_resurrect restore -n 2 --layout-only"
  bindsym $mod+3 exec "$i3_resurrect restore -n 3 --layout-only"
  bindsym $mod+4 exec "$i3_resurrect restore -n 4 --layout-only"
  bindsym $mod+5 exec "$i3_resurrect restore -n 5 --layout-only"
  bindsym $mod+6 exec "$i3_resurrect restore -n 6 --layout-only"
  bindsym $mod+7 exec "$i3_resurrect restore -n 7 --layout-only"
  bindsym $mod+8 exec "$i3_resurrect restore -n 8 --layout-only"
  bindsym $mod+8 exec "$i3_resurrect restore -n 9 --layout-only"
  bindsym $mod+0 exec "$i3_resurrect restore -n 10 --layout-only"
  bindsym b exec "$i3_resurrect restore --programs-only"
  bindsym $mod+b exec "$i3_resurrect restore --layout-only"

  # Back to normal: Enter, Escape, or n
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+b mode "$mode_resurrect_restore"

